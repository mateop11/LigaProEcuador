@model IEnumerable<LigaProEcuador.Models.Estadio>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - LigaProEcuador</title>
    <style>
        body {
            background: linear-gradient(135deg, #000000, #FFDD00); /* Colores de la LigaPro */
            color: #ffffff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            margin: 20px auto;
            width: 90%;
            text-align: center;
        }

        h1 {
            margin-top: 20px;
            font-size: 36px;
        }

        p {
            font-size: 18px;
            margin-bottom: 30px;
        }

        .table {
            width: 100%;
            background-color: #ffffff;
            color: #000000;
            border-collapse: collapse;
        }

            .table thead {
                background-color: #FFDD00;
            }

            .table th, .table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .table th {
                font-weight: bold;
            }

        a {
            color: #FFDD00;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .btn-create {
            background-color: #FFDD00;
            color: #000000;
            padding: 10px 20px;
            border: none;
            text-decoration: none;
            font-size: 16px;
            margin-bottom: 20px;
        }

            .btn-create:hover {
                background-color: #000000;
                color: #FFDD00;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Estadios de la LigaPro Ecuador</h1>
        <p>
            Encuentra aquí la lista de estadios donde se disputan los partidos de la LigaPro Ecuador.
        </p>
        <p>
            <a class="btn-create" asp-action="Create">Crear nuevo estadio</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.CiudadEstadio)</th>
                    <th>@Html.DisplayNameFor(model => model.Capacidad)</th>
                    <th>@Html.DisplayNameFor(model => model.Equipo.IdEquipo)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.CiudadEstadio)</td>
                        <td>@Html.DisplayFor(modelItem => item.Capacidad)</td>
                        <td>@Html.DisplayFor(modelItem => item.Equipo.IdEquipo)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdEstadio">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.IdEstadio">Detalles</a> |
                            <a asp-action="Delete" asp-route-id="@item.IdEstadio">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
